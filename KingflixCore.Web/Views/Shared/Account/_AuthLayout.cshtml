@using Microsoft.AspNetCore.Localization
@{
    var requestCulture = Context.Features.Get<IRequestCultureFeature>();
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <title>@ViewData["Title"]</title>
    <meta name="description" content='@ViewData["MetaKeyword"]'>
    <meta name="keywords" content='@ViewData["MetaDescription"]' />
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link rel="shortcut icon" type="image/x-icon" href="favicon.ico">

    <environment exclude="Development">
        <link href="~/css/login.min.css" rel="stylesheet" />
    </environment>
    <environment include="Development">
        <link href="~/lib/bootstrap/css/bootstrap.css" rel="stylesheet" />
        <link href="~/assets/css/login.css" rel="stylesheet" />
    </environment>

</head>

<body>
    <div id="page">
        <div class="container-fluid">
            @RenderBody()
        </div>
    </div>
    <environment exclude="Development">
        <script src="~/js/login.min.js" type="text/javascript"></script>
    </environment>
    <environment include="Development">
        <script src="~/lib/jquery/jquery.js" type="text/javascript"></script>
        <script src="~/lib/jquery/jquery.slim.js" type="text/javascript"></script>
        <script src="~/lib/popper.js/umd/popper.js" type="text/javascript"></script>
        <script src="~/lib/bootstrap/js/bootstrap.js" type="text/javascript"></script>
        <script src="~/assets/js/tooltip-init.js" type="text/javascript"></script>
        <script src="~/assets/js/animation/wow/wow.min.js" type="text/javascript"></script>
        <script src="~/js/site.js" type="text/javascript"></script>
    </environment>
    @RenderSection("Scripts", required: false)
</body>

</html>
